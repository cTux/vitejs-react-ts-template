{
  "name": "@ctux/vitejs-react-ts-template",
  "version": "0.4.0",
  "homepage": "https://github.com/cTux/vitejs-react-ts-template",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "build:scratch": "pnpm install && pnpm run build:check",
    "build:check": "pnpm exec concurrently -n Lint,Build,Test,Unused \"pnpm run lint\" \"pnpm run build\" \"pnpm run test\" \"pnpm run template:check:dependencies\"",
    "deploy": "gh-pages -d dist",
    "dev": "vite",
    "lint": "eslint .",
    "prepare": "husky install",
    "preview": "vite preview",
    "template:update": "update-template https://github.com/cTux/vitejs-react-ts-template",
    "template:update:dependencies": "pnpm install && pnpm exec npm-check-updates -u --target minor && pnpm install",
    "template:audit:dependencies": "pnpm audit --fix && pnpm install",
    "template:check:dependencies": "pnpm exec depcheck",
    "template:branches:show": "git-removed-branches",
    "template:branches:delete": "git-removed-branches --prune",
    "test": "pnpm run test:vitest",
    "test:vitest": "vitest --run --globals --dom",
    "test:vitest:coverage": "vitest --run --coverage --globals --dom",
    "test:vitest:watch": "vitest --globals --dom",
    "test:watch": "pnpm run test:vitest:watch"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.13.0",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.44",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@vitejs/plugin-react": "^1.3.2",
    "c8": "^7.11.3",
    "concurrently": "^7.2.2",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^4.0.0",
    "git-removed-branches": "^2.0.1",
    "happy-dom": "^5.3.1",
    "husky": "^8.0.1",
    "node-fetch": "^3.2.6",
    "npm-check-updates": "^13.1.5",
    "prettier": "^2.7.0",
    "sass": "^1.52.3",
    "typescript": "^4.7.3",
    "update-template": "^1.3.1",
    "vite": "^2.9.12",
    "vite-plugin-pwa": "^0.12.0",
    "vitest": "^0.15.1"
  },
  "pnpm": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "async@<2.6.4": ">=2.6.4",
      "trim@<0.0.3": ">=0.0.3",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "ejs@<3.1.7": ">=3.1.7",
      "async@>=2.0.0 <2.6.4": ">=2.6.4"
    }
  }
}
