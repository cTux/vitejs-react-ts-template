{
  "name": "vitejs-react-ts-boilerplate",
  "version": "0.2.0",
  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "test": "pnpm run test:vitest",
    "test:all": "concurrently -n \"vitest,jest\" \"pnpm run test:vitest\" \"pnpm run test:jest\"",
    "test:watch": "pnpm run test:vitest:watch",
    "test:vitest": "vitest --run --globals --dom",
    "test:vitest:watch": "vitest --globals --dom",
    "test:vitest:coverage": "vitest --run --coverage --globals --dom",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "prepare": "husky install",
    "preview": "vite preview",
    "build": "vite build",
    "build:scratch": "rm -rf node_modules && pnpm install && pnpm run lint && pnpm run test && pnpm run build",
    "rebuild": "pnpm run build:scratch",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "i18next": "^21.6.10",
    "i18next-fetch-backend": "^4.1.0",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.13.0",
    "@testing-library/react": "^12.1.5",
    "@types/enzyme": "^3.10.11",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.22",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vitejs/plugin-react": "^1.0.7",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "autoprefixer": "^10.4.2",
    "c8": "^7.11.2",
    "concurrently": "^7.1.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^3.2.3",
    "happy-dom": "^3.1.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-css-modules": "^2.1.0",
    "jest-css-modules-transform": "^4.3.0",
    "jest-fetch-mock": "^3.0.3",
    "node-fetch": "^3.2.4",
    "postcss": "^8.4.6",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "sass": "^1.49.7",
    "sinon": "^13.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vite-plugin-pwa": "^0.11.13",
    "vitest": "^0.10.2"
  },
  "jest": {
    "automock": false,
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/jest.enzyme.setup.ts"
    ],
    "moduleNameMapper": {
      "\\.(jpg|png|svg|gif)$": "<rootDir>/tests/mocks/file.mock.ts",
      "react-i18next": "<rootDir>/tests/mocks/i18next-react.mock.tsx",
      "i18next": "<rootDir>/tests/mocks/i18next.mock.ts"
    },
    "transform": {
      "\\.(css|scss)$": "<rootDir>/node_modules/jest-css-modules-transform"
    }
  },
  "postcss": {
    "modules": true,
    "plugins": {
      "autoprefixer": {}
    }
  }
}
