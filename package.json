{
  "name": "vitejs-react-ts-boilerplate",
  "version": "0.4.0",
  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "test": "pnpm run test:vitest",
    "test:all": "concurrently -n \"vitest,jest\" \"pnpm run test:vitest\" \"pnpm run test:jest\"",
    "test:watch": "pnpm run test:vitest:watch",
    "test:vitest": "vitest --run --globals --dom",
    "test:vitest:watch": "vitest --globals --dom",
    "test:vitest:coverage": "vitest --run --coverage --globals --dom",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "prepare": "husky install",
    "preview": "vite preview",
    "build": "vite build",
    "build:scratch": "rm -rf node_modules && pnpm install && pnpm run lint && pnpm run test && pnpm run build",
    "rebuild": "pnpm run build:scratch",
    "deploy": "gh-pages -d dist",
    "storybook": "start-storybook"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "i18next": "^21.8.3",
    "i18next-fetch-backend": "^4.1.2",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.16.9"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "@mdx-js/react": "^2.1.1",
    "@storybook/addon-docs": "^6.5.3",
    "@storybook/addons": "^6.5.3",
    "@storybook/builder-vite": "^0.1.35",
    "@storybook/channel-postmessage": "^6.5.3",
    "@storybook/channel-websocket": "^6.5.3",
    "@storybook/client-api": "^6.5.3",
    "@storybook/core-common": "^6.4.3",
    "@storybook/node-logger": "^6.4.3",
    "@storybook/preview-web": "^6.5.3",
    "@storybook/react": "^6.5.3",
    "@storybook/testing-library": "^0.0.11",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/react": "^12.1.5",
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.22",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@vitejs/plugin-react": "^1.3.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.7",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "concurrently": "^7.2.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^4.0.0",
    "happy-dom": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-css-modules": "^2.1.0",
    "jest-css-modules-transform": "^4.4.2",
    "jest-environment-jsdom": "^28.1.0",
    "jest-fetch-mock": "^3.0.3",
    "node-fetch": "^3.2.4",
    "postcss": "^8.4.14",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.6.2",
    "require-from-string": "^2.0.2",
    "sass": "^1.52.0",
    "sinon": "^14.0.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-plugin-pwa": "^0.12.0",
    "vitest": "^0.12.6"
  },
  "jest": {
    "automock": false,
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/jest.enzyme.setup.ts"
    ],
    "moduleNameMapper": {
      "\\.(jpg|png|svg|gif)$": "<rootDir>/tests/mocks/file.mock.ts",
      "react-i18next": "<rootDir>/tests/mocks/i18next-react.mock.tsx",
      "i18next": "<rootDir>/tests/mocks/i18next.mock.ts",
      "clsx": "<rootDir>/tests/mocks/clsx.jest.mock.ts"
    },
    "transform": {
      "\\.(css|scss)$": "<rootDir>/node_modules/jest-css-modules-transform"
    }
  },
  "postcss": {
    "modules": true,
    "plugins": {
      "autoprefixer": {}
    }
  }
}
