{
  "name": "@ctux/vitejs-react-ts-template",
  "version": "0.4.0",
  "homepage": "https://github.com/cTux/vitejs-react-ts-template",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "build:scratch": "pnpm install && pnpm run build:check",
    "build:check": "pnpm exec concurrently -n Lint,Build,Test \"pnpm run lint\" \"pnpm run build\" \"pnpm run test\"",
    "build:audit": "pnpm audit --fix",
    "deploy": "gh-pages -d dist",
    "dev": "vite",
    "lint": "eslint .",
    "prepare": "husky install",
    "preview": "vite preview",
    "storybook": "start-storybook",
    "template:update": "update-template https://github.com/cTux/vitejs-react-ts-template",
    "template:update:dependencies": "npm-check-updates -u --target minor && pnpm run build:scratch",
    "template:audit:dependencies": "pnpm run build:audit && pnpm run build:scratch",
    "template:branches:show": "git-removed-branches",
    "template:branches:delete": "git-removed-branches --prune",
    "test": "pnpm run test:vitest",
    "test:jest": "jest",
    "test:jest:coverage": "jest --coverage",
    "test:jest:watch": "jest --watch",
    "test:vitest": "vitest --run --globals --dom",
    "test:vitest:coverage": "vitest --run --coverage --globals --dom",
    "test:vitest:watch": "vitest --globals --dom",
    "test:watch": "pnpm run test:vitest:watch"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "i18next": "^21.8.4",
    "i18next-fetch-backend": "^4.1.2",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.16.9"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "@mdx-js/react": "^2.1.1",
    "@storybook/addon-docs": "^6.5.5",
    "@storybook/addons": "^6.5.5",
    "@storybook/builder-vite": "^0.1.35",
    "@storybook/channel-postmessage": "^6.5.5",
    "@storybook/channel-websocket": "^6.5.5",
    "@storybook/client-api": "^6.5.5",
    "@storybook/core-common": "^6.5.5",
    "@storybook/node-logger": "^6.5.5",
    "@storybook/preview-web": "^6.5.5",
    "@storybook/react": "^6.5.5",
    "@storybook/testing-library": "^0.0.11",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.36",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "concurrently": "^7.2.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^4.0.0",
    "git-removed-branches": "^2.0.1",
    "happy-dom": "^4.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-css-modules": "^2.1.0",
    "jest-css-modules-transform": "^4.4.2",
    "jest-environment-jsdom": "^28.1.0",
    "jest-fetch-mock": "^3.0.3",
    "node-fetch": "^3.2.4",
    "npm-check-updates": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.6.2",
    "require-from-string": "^2.0.2",
    "sass": "^1.52.1",
    "sinon": "^14.0.0",
    "ts-jest": "^28.0.3",
    "typescript": "^4.7.2",
    "update-template": "^1.3.1",
    "vite": "^2.9.9",
    "vite-plugin-pwa": "^0.12.0",
    "vitest": "^0.12.9",
    "webpack": "^5.72.1"
  },
  "jest": {
    "automock": false,
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "\\.(jpg|png|svg|gif)$": "<rootDir>/tests/mocks/file.mock.ts",
      "react-i18next": "<rootDir>/tests/mocks/i18next-react.mock.tsx",
      "i18next": "<rootDir>/tests/mocks/i18next.mock.ts",
      "clsx": "<rootDir>/tests/mocks/clsx.jest.mock.ts"
    },
    "transform": {
      "\\.(css|scss)$": "<rootDir>/node_modules/jest-css-modules-transform"
    }
  },
  "postcss": {
    "modules": true,
    "plugins": {
      "autoprefixer": {}
    }
  },
  "pnpm": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "async@<2.6.4": ">=2.6.4",
      "trim@<0.0.3": ">=0.0.3",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "ejs@<3.1.7": ">=3.1.7"
    }
  }
}
