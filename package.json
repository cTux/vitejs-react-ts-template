{
  "name": "vitejs-react-ts-boilerplate",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "dev:storybook": "start-storybook -p 6006",
    "dev:preview": "vite preview",
    "dev:preview:storybook": "http-server storybook-static",
    "lint": "eslint .",
    "test": "npm run test:all",
    "test:all": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "husky install",
    "build": "npm run build:src",
    "build:src": "vite build",
    "build:storybook": "build-storybook",
    "build:scratch": "rm -rf node_modules && pnpm install && pnpm run lint && pnpm run test && pnpm run build",
    "rebuild": "npm run build:scratch",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "i18next": "^21.6.10",
    "i18next-fetch-backend": "^4.1.0",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/cli": "^6.4.18",
    "@storybook/core-common": "^6.4.3",
    "@storybook/react": "^6.3.8",
    "@types/enzyme": "^3.10.11",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.22",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vitejs/plugin-react": "^1.0.7",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "enzyme": "^3.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^3.2.3",
    "http-server": "^14.1.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-css-modules": "^2.1.0",
    "jest-css-modules-transform": "^4.3.0",
    "jest-fetch-mock": "^3.0.3",
    "postcss": "^8.4.6",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "sass": "^1.49.7",
    "sb": "^6.4.18",
    "storybook-builder-vite": "^0.1.15",
    "ts-jest": "^27.1.3",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vite-plugin-pwa": "^0.11.13",
    "webpack": "^5.68.0"
  },
  "jest": {
    "automock": false,
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "\\.(jpg|png|svg|gif)$": "<rootDir>/tests/mocks/file.mock.ts",
      "react-i18next": "<rootDir>/tests/mocks/i18next-react.mock.tsx",
      "i18next": "<rootDir>/tests/mocks/i18next.mock.ts"
    },
    "transform": {
      "\\.(css|scss)$": "<rootDir>/node_modules/jest-css-modules-transform"
    }
  },
  "postcss": {
    "modules": true,
    "plugins": {
      "autoprefixer": {}
    }
  }
}
